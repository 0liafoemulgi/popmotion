{
  "name": "popmotion",
  "version": "5.0.0",
  "description": "The JavaScript motion engine. Animation, physics, and input tracking.",
  "author": "Matt Perry <sirhound@popmotion.io>",
  "homepage": "http://popmotion.io",
  "main": "./popmotion.js",
  "files": [
    "lib",
    "popmotion.global.js",
    "popmotion.global.min.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Popmotion/popmotion"
  },
  "bugs": {
    "url": "https://github.com/Popmotion/popmotion/issues"
  },
  "keywords": [
    "animation",
    "ux",
    "ui",
    "popmotion",
    "redshift",
    "canvas animation",
    "jquery animation",
    "dom animation",
    "dom",
    "pointer tracking",
    "mouse",
    "mouse tracking",
    "touch",
    "touch tracking",
    "physics",
    "interaction",
    "interface",
    "svg"
  ],
  "analyze": true,
  "license": "GPL-3.0",
  "scripts": {
    "compile": "babel src --out-dir lib && small -i lib/load/global.js -o ./dist/popmotion.global.js && uglifyjs ./dist/popmotion.global.js --compress --mangle --screw-ie8 -o ./dist/popmotion.global.min.js",
    "watch": "webpack --progress --colors --watch",
    "measure": "gzip -c dist/popmotion.global.min.js | wc -c",
    "test": "mocha --compilers js:babel-register"
  },
  "devDependencies": {
    "babel-core": "^6.0.20",
    "babel-loader": "^6.0.1",
    "babel-plugin-transform-export-extensions": "^6.4.0",
    "babel-preset-es2015-subset-loose": "^1.0.0",
    "babel-preset-stage-2": "^6.0.15",
    "babel-register": "^6.3.13",
    "chai": "^3.4.0",
    "jshint": "^2.8.0",
    "jshint-loader": "^0.8.3",
    "webpack": "1.7.2"
  },
  "dependencies": {
    "framesync": "^1.0.1"
  }
}
