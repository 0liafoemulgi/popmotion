{
  "name": "popmotion",
  "version": "6.3.5",
  "description": "The JavaScript motion engine. Create animations and interactions with tweens, physics and input tracking.",
  "author": "Matt Perry <sirhound@popmotion.io>",
  "homepage": "http://popmotion.io",
  "main": "./lib/popmotion.js",
  "files": [
    "lib",
    "popmotion.global.js",
    "popmotion.global.min.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Popmotion/popmotion"
  },
  "bugs": {
    "url": "https://github.com/Popmotion/popmotion/issues"
  },
  "keywords": [
    "animation",
    "ux",
    "ui",
    "popmotion",
    "canvas animation",
    "jquery animation",
    "dom animation",
    "dom",
    "pointer tracking",
    "mouse",
    "mouse tracking",
    "touch",
    "touch tracking",
    "physics",
    "interaction",
    "interface",
    "svg"
  ],
  "analyze": true,
  "license": "MIT",
  "scripts": {
    "build": "babel src --out-dir lib && NODE_ENV=production webpack && npm run measure",
    "watch": "NODE_ENV=development webpack --progress --colors --watch",
    "build-site": "webpack --config webpack.site.config.js",
    "watch-site": "webpack --config webpack.site.config.js --watch",
    "measure": "gzip -c dist/popmotion.global.min.js | wc -c",
    "test": "jest",
    "prepublish": "rm -rf lib && npm run build && npm run test"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.0.20",
    "babel-eslint": "^5.0.4",
    "babel-loader": "^6.0.1",
    "babel-plugin-transform-export-extensions": "^6.4.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-jsx": "^6.7.5",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.6",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015-subset-loose": "^1.0.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "babel-register": "^6.3.13",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "eslint": "^1.10.3",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "front-matter": "^2.1.1",
    "history": "^4.5.0",
    "html-loader": "^0.4.4",
    "jest": "^18.0.0",
    "markdown-loader": "^0.1.7",
    "markdown-to-react-components": "^0.2.2",
    "node-sass": "^4.1.1",
    "path": "^0.12.7",
    "raw-loader": "^0.5.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-helmet": "^3.2.3",
    "react-router": "^3.0.0",
    "sass-loader": "^4.1.1",
    "static-site-generator-webpack-plugin": "^3.1.0",
    "style-loader": "^0.13.1",
    "webpack": "1.7.2"
  },
  "jest": {
    "testRegex": "_tests/[^_].*\\.js$",
    "rootDir": "src"
  }
}
